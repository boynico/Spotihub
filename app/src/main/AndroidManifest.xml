<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.azarquiel.example">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/azulspo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/azulspo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.ArtistCommentsActivity"></activity>
        <activity android:name=".view.ArtistActivity" />
        <activity android:name=".view.SearchActivity" />
        <activity android:name=".view.RecentlyPlayedActivity" />
        <activity android:name=".view.LoggedInActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>